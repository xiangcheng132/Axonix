<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyFragment"
    >

    <!-- 历史记录按钮 -->
    <Button
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
    android:minWidth="120dp"
    android:layout_gravity="top|end"
    android:layout_margin="16dp"
    android:text="历史记录"
    android:textColor="@color/white"
    android:textSize="14sp"
    android:backgroundTint="@color/history_button_color"
    android:drawableStart="@android:drawable/ic_menu_recent_history"
    android:drawablePadding="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"/>

    <!-- 中央大圆 -->
    <View
        android:id="@+id/circleView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_background"
        android:layout_gravity="center" />

    <!-- 寻求帮助按钮 -->
    <Button
        android:id="@+id/btnSeekHelp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
    android:minWidth="120dp"
    android:text="寻求帮助"
    android:textColor="@color/white"
    android:backgroundTint="@color/seek_help_color"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="100dp"/>

    <!-- 提供帮助按钮 -->
    <Button
        android:id="@+id/btnProvideHelp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
    android:minWidth="120dp"
    android:text="提供帮助"
    android:textColor="@color/white"
    android:backgroundTint="@color/provide_help_color"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="30dp"/>

</FrameLayout>